Found at <em><%= @page.url %></em>:


<%= form_for @page do |f| %>
  <%= f.submit :update, class: 'btn btn-primary' %>

  <%= link_to 'Generate book', books_path(page_id: @page.id), method: :post, class: 'btn btn-danger' %>

  <br/>
  <label>Title</label><br/>
  <%= f.text_field :title, value: @page.title %><br/>

  <label>Links</label><br/>
  <%= f.select :links, @page.links, {}, { multiple: true, size: @page.links.length } %>


<% end %>
